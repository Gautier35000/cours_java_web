<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>simple-servlet</servlet-name>
        <servlet-class>fr.jmgautier.javawebcourse.controller.SimpleServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>hour-servlet</servlet-name>
        <servlet-class>fr.jmgautier.javawebcourse.controller.HourServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>fr.jmgautier.javawebcourse.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>diconnects-servlet</servlet-name>
        <servlet-class>fr.jmgautier.javawebcourse.controller.DisconnectsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>simple-servlet</servlet-name>
        <url-pattern>/simple</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hour-servlet</servlet-name>
        <url-pattern>/hour</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>diconnects-servlet</servlet-name>
        <url-pattern>/disconnects</url-pattern>
    </servlet-mapping>
</web-app>
